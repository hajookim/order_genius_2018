<p id="notice"><%= notice %></p>

<h1>Order Menu Items</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Menu item</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_menu_items.each do |order_menu_item| %>
      <tr>
        <td><%= order_menu_item.order.id %></td>
        <td><%= order_menu_item.menu_item.name %></td>
        <td><%= order_menu_item.quantity %></td>
        <td><%= link_to 'Show', order_menu_item %></td>
        <td><%= link_to 'Edit', edit_order_menu_item_path(order_menu_item) %></td>
        <td><%= link_to 'Destroy', order_menu_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

